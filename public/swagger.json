{
  "swagger" : "3.0",
  "info" : {
    "description" : "Hub provides endpoints for acceptance and verification micropaymnets.",
    "version" : "1.0.0",
    "title" : "Machinomy hub API"
  },
  "basePath" : "/v1",
  "schemes" : [ "https" ],
  "paths" : {
    "/accept" : {
      "post" : {
        "description" : "Save payment into the hub storage and generete uniq token that can be verified by another agent.",
        "operationId" : "acceptPayment",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "payment",
          "description" : "Machinomy compatible payment",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/Payment"
          }
        } ],
        "responses" : {
          "202" : {
            "description" : "Accepted"
          },
          "403" : {
            "description" : "Error"
          }
        }
      }
    },
    "/verify" : {
      "get" : {
        "description" : "Verify token that /accept returns.",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "meta",
          "in" : "query",
          "description" : "Meta inforamtaion about the payment.",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "token",
          "in" : "query",
          "description" : "Token generate by payment accept.",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "price",
          "in" : "query",
          "description" : "The price that user paid.",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Return ok if payment is valid."
          },
          "403" : {
            "description" : "Error"
          }
        }
      }
    }
  },
  "definitions" : {
    "Payment" : {
      "properties" : {
        "channelId" : {
          "type" : "string"
        },
        "sender" : {
          "type" : "string"
        },
        "receiver" : {
          "type" : "string"
        },
        "price" : {
          "type" : "string"
        },
        "value" : {
          "type" : "string"
        },
        "channelValue" : {
          "type" : "string"
        },
        "v" : {
          "type" : "string"
        },
        "r" : {
          "type" : "string"
        },
        "s" : {
          "type" : "string"
        },
        "meta" : {
          "type" : "string"
        },
        "contractAddress" : {
          "type" : "string"
        }
      }
    }
  }
}