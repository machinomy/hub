{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "dist/"
  },
  "include": [
    "src/index.ts",
    "test",
    "node_modules/*/index.d.ts",
    "node_modules/@machinomy/*/index.d.ts"
  ]
}
