{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "dist/"
  },
  "include": [
    "./src/**/*",
    "./src/globals.d.ts",
    "node_modules/@machinomy/types-web3/index.d.ts",
    "node_modules/@machinomy/types-ethereumjs-util/index.d.ts"
  ]
}
