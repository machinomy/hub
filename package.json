{
  "name": "machinomy_hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "yarn build && NODE_ENV=test mocha",
    "build": "tsc -p tsconfig.json",
    "deploy": "ansible-playbook -i deploy/hosts deploy/deploy.yml",
    "doc": "swagger-codegen generate -i swagger.yaml -l public/swagger.json",
    "lint": "tslint --format stylish --project . --exclude 'node_modules/**/*.ts'",
    "start": "yarn build && node bin/www",
    "inspect": "node --inspect bin/www",
    "migrate": "db-migrate up"
  },
  "types": "index.d.ts",
  "dependencies": {
    "bignumber.js": "^4.1.0",
    "body-parser": "~1.13.2",
    "config": "^1.26.1",
    "cookie-parser": "~1.3.5",
    "cors": "^2.8.4",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.3.0",
    "dotenv": "^4.0.0",
    "ethereumjs-util": "^5.1.5",
    "figlet": "^1.2.0",
    "handlebars": "^4.0.11",
    "machinomy": "^1.9.1",
    "morgan": "~1.6.1",
    "pg": "^7.4.3",
    "serve-favicon": "~2.3.0",
    "web3": "^0.20.0",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0"
  },
  "devDependencies": {
    "@machinomy/types-safe-buffer": "^0.0.1",
    "@machinomy/types-truffle-contract": "https://github.com/machinomy/types-truffle-contract",
    "@types/bignumber.js": "^4.0.3",
    "@types/body-parser": "^1.16.4",
    "@types/cookie-parser": "^1.4.0",
    "@types/cors": "2.8.3",
    "@types/debug": "^0.0.29",
    "@types/express": "^4.0.36",
    "@types/morgan": "^1.7.32",
    "@types/node": "^10.0.0",
    "@types/serve-favicon": "^2.2.28",
    "debug": "~2.2.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "2.8.1"
  }
}
