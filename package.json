{
  "name": "@machinomy/hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "yarn build && NODE_ENV=test jest",
    "build": "tsc -p tsconfig.json",
    "lint": "tslint --format stylish --project . --exclude 'node_modules/**/*.ts'",
    "start": "yarn build && node dist/bin/hub",
    "inspect": "node --inspect dist/bin/hub",
    "migrate": "db-migrate up"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/dotenv": "^4.0.3",
    "bignumber.js": "^4.1.0",
    "body-parser": "~1.13.2",
    "config": "^1.26.1",
    "cookie-parser": "~1.3.5",
    "cors": "^2.8.4",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.3.0",
    "decko": "^1.2.0",
    "dotenv": "^4.0.0",
    "ethereumjs-util": "^5.1.5",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "figlet": "^1.2.0",
    "handlebars": "^4.0.11",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "machinomy": "^1.9.1",
    "morgan": "~1.6.1",
    "pg": "^7.4.3",
    "serve-favicon": "~2.3.0",
    "web3": "^0.20.0"
  },
  "devDependencies": {
    "@machinomy/types-safe-buffer": "^0.0.1",
    "@machinomy/types-truffle-contract": "https://github.com/machinomy/types-truffle-contract",
    "@machinomy/types-web3": "^0.0.7",
    "@types/bignumber.js": "^4.0.3",
    "@types/body-parser": "^1.16.4",
    "@types/cookie-parser": "^1.4.0",
    "@types/cors": "2.8.3",
    "@types/debug": "^0.0.29",
    "@types/express": "^4.0.36",
    "@types/jest": "^22.2.3",
    "@types/koa": "^2.0.45",
    "@types/koa-router": "^7.0.28",
    "@types/morgan": "^1.7.32",
    "@types/node": "^10.0.0",
    "@types/serve-favicon": "^2.2.28",
    "@types/supertest": "^2.0.4",
    "debug": "~2.2.0",
    "jest": "^23.0.0",
    "sqlite3": "^4.0.0",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "2.8.1"
  }
}
